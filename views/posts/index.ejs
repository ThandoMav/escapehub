<% layout('layouts/boilerplate')%>
    <header class="jumbotron">
        <div class="container">
            <h1><span class="glyphicon glyphicon-tent"></span> Welcome To ThoughtsHub!</h1>
            <p>View life-changing insights</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/posts/new">Add Post </a>
            </p>
            <p>
                <form action="/posts" method="GET" class="form-inline" id="campground-search">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="Post search..." class="form-control w-75">
                        <input type="submit" value=" Submit">
                    </div>
                </form>
            </p>
        </div>
    </header>

    <div class="container">
        <h1>All Posts</h1>

        <% for (let post of posts){%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <%if(post.images.length) {%>
                            <img class="img-fluid" alt="" src="<%=post.images[0].url%>" crossorigin />
                            <% }else {%>
                                <img class="img-fluid" alt="" src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png" crossorigin />
                                <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= post.title %>
                            </h5>

                            <p class="card-text">
                                <%= post.snippet %>
                            </p>
                            <a href="#"><time class="timeago" datetime="2019-10-26 20:00"> <%= moment(post.creationDate).format('Do MMMM, YYYY'); %> <br/> In <%=post.category%> </p></time></a>
                            
                            <a class="btn btn-primary" href="/posts/<%=post.slug%>">View <%=post.title%></a
          >
        </div>
      </div>
    </div>
  </div>
  <% }%>

   <% for(let t = 1 ; t <= pages; t++ ){ %>
      <a href="?page=<%=t%>"> <%= t%></a>
    <% }%>

</div>

    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
        const posts = {
            features: <%- JSON.stringify(posts) %>
                    }
    </script>

