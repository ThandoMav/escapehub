<% layout('layouts/boilerplate')%>
    <title>
        <%= post.title%>
    </title>
    <meta name="description" content="<%= post.snippet%>" />

    <header class="jumbotron">
        <div class="container">
            <h1><span class="glyphicon glyphicon-tent"></span>
                <%= post.title%>
            </h1>
            <p>
                <a href="/">Home</a>
            </p>

            <p>
                <a href="#"><strong><%= post.category%></strong></a>
                <br> Student Hacks
            </p>

            <p>
                <form action="/posts" method="GET" class="form-inline" id="campground-search">
                    <div class="form-group">
                        <input type="text" name="search" placeholder="Post search..." class="form-control w-75">
                        <input type="submit" value=" Submit">
                    </div>
                </form>
            </p>
        </div>
    </header>

    <!-- section main content -->
    <section class="main-content">
        <div class="container-xl">
            <div class="row gy-4">
                <div class="col-lg-8">
                    <!-- post single -->
                    <div class="post post-single">
                        <!-- post header -->
                        <div class="post-header">
                            <h1 class="title mt-0 mb-3">
                                <%= post.title%>
                            </h1>
                            <ul class="meta list-inline mb-0">
                                <li class="list-inline-item">
                                    <a href="#"><img src="images/other/author-sm.png" class="author" alt="author" />Admin</a>
                                </li>
                                <li class="list-inline-item"><a href="#">Trending</a></li>
                                <li class="list-inline-item">
                                    <%= moment(post.creationDate).format('Do MMMM, YYYY'); %>
                                </li>
                            </ul>
                        </div>
                        <!-- featured image -->
                        <div class="featured-image">
                            <%if(post.images.length) {%>
                                <img alt="" src="<%=post.images[0].url%>" crossorigin />
                                <% }else {%>
                                    <img alt="" src="https://res.cloudinary.com/douqbebwk/image/upload/v1600103881/YelpCamp/lz8jjv2gyynjil7lswf4.png" crossorigin />
                                    <% } %>
                        </div>
                        <!-- post content -->
                        <div class="post-content clearfix">
                            <p class="card-text">CATEGORY:
                                <%= post.category%>
                            </p>

                            <% if( currentUser ) {%>

                                <a href="https://drive.google.com/uc?export=download&id=<%= post.documentDownload %>">
                                    <h3 class="mb-0 mt-0">Download Cheatsheet</h3>
                                    <p class="mb-0">get more advice</p>
                                </a>

                                <% }else{ %>
                                    <a href="/login">
                                        <h3 class="mb-0 mt-0">Download Cheatsheet</h3>
                                        <p class="mb-0">login to Download Guildelines</p>
                                    </a>
                                    <%} %>

                                        <p>
                                            <%- post.description%>
                                        </p>
                        </div>
                        <!-- post bottom section -->
                        <div class="post-bottom">
                            <div class="row d-flex align-items-center">
                                <div class="col-md-6 col-12 text-center text-md-start">
                                    <!-- tags -->
                                    <a href="#" class="tag">#Trending</a>
                                    <a href="#" class="tag">#Video</a>
                                    <a href="#" class="tag">#Featured</a>
                                </div>
                                <div class="col-md-6 col-12">
                                    <!-- social icons -->
                                    <ul class="social-icons list-unstyled list-inline mb-0 float-md-end">
                                        <li class="list-inline-item">
                                            <a href="#"><i class="fab fa-facebook-f"></i></a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a href="#"><i class="fab fa-twitter"></i></a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a href="#"><i class="fab fa-linkedin-in"></i></a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a href="#"><i class="fab fa-pinterest"></i></a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a href="#"><i class="fab fa-telegram-plane"></i></a>
                                        </li>
                                        <li class="list-inline-item">
                                            <a href="#"><i class="far fa-envelope"></i></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="spacer" data-height="50"></div>

                    <div class="about-author padding-30 rounded">
                        <div class="thumb">
                            <img src="images/other/avatar-about.png" alt="edd mav digital" />
                        </div>
                        <div class="details">
                            <h4 class="name">
                                <a href="www.eddymav.digital">Edd Mav Digital</a>
                            </h4>
                            <p>
                                Hello, Iâ€™m a content writer who is fascinated by content career, financial, fashion, celebrity and lifestyle. I help clients bring the right content to the right people.
                            </p>
                            <!-- social icons -->
                            <ul class="social-icons list-unstyled list-inline mb-0">
                                <li class="list-inline-item">
                                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#"><i class="fab fa-twitter"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#"><i class="fab fa-instagram"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#"><i class="fab fa-pinterest"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#"><i class="fab fa-medium"></i></a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#"><i class="fab fa-youtube"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="spacer" data-height="50"></div>
                    <% if( currentUser && post.author.equals(currentUser._id)) {%>
                        <div class="card-body">
                            <a class="card-link btn btn-info" href="/posts/<%=post._id%>/edit">Edit</a
          >
          <form
            class="d-inline"
            action="/posts/<%=post._id%>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-danger">Delete</button>
          </form>
        </div>
        <% } %>

        <!-- section header -->
        <div class="section-header">
          <h3 class="section-title">Comments (3)</h3>
          <img src="images/wave.svg" class="wave" alt="wave" />
        </div>
        <!-- post comments -->
        <div class="comments bordered padding-30 rounded">
          <ul class="comments">
            <% for(let review of post.reviews) { %>
            <!-- comment item -->
            <li class="comment rounded">
              <div class="thumb">
                <img src="images/other/comment-1.png" alt="John Doe" />
              </div>
              <div class="details">
                <h4 class="name">
                  <a href="#"> <%= review.author.username%> </a>
                            </h4>
                            <span class="date"><%= moment(post.creationDate).format('Do MMMM, YYYY');
                  %></span
                >
                <p class="starability-result" data-rating="<%=review.rating%>">
                  Rated: <%= review.rating %> stars
                </p>
                <p><%= review.body %></p>
                <% if( currentUser && review.author.equals(currentUser._id)) {%>
                <form
                  action="/posts/<%=post._id%>/reviews/<%=review._id%>?_method=DELETE"
                  method="POST"
                >
                  <button class="btn btn-sm btn-danger">Delete</button>
                </form>
                <% } %>
              </div>
            </li>
            <% } %>
          </ul>
        </div>

        <div class="spacer" data-height="50"></div>

        <% if(currentUser){ %>
        <!-- section header -->
        <div class="section-header">
          <h3 class="section-title">Leave Comment</h3>
          <img src="images/wave.svg" class="wave" alt="wave" />
        </div>
        <!-- comment form -->
        <div class="comment-form rounded bordered padding-30">
          <form
            id="comment-form"
            class="comment-form"
            action="/posts/<%=post._id%>/reviews"
            method="POST"
            class="mb-3 validated-form"
            novalidate
          >
            <div class="messages"></div>

            <div class="row">
              <div class="column col-md-12">
                <!-- Comment textarea -->
                <div class="form-group">
                  <fieldset class="starability-basic">
                    <input
                      type="radio"
                      id="no-rate"
                      class="input-no-rate"
                      name="review[rating]"
                      value="1"
                      checked
                      aria-label="No rating."
                    />
                    <input
                      type="radio"
                      id="first-rate1"
                      name="review[rating]"
                      value="1"
                    />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input
                      type="radio"
                      id="first-rate2"
                      name="review[rating]"
                      value="2"
                    />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input
                      type="radio"
                      id="first-rate3"
                      name="review[rating]"
                      value="3"
                    />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input
                      type="radio"
                      id="first-rate4"
                      name="review[rating]"
                      value="4"
                    />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input
                      type="radio"
                      id="first-rate5"
                      name="review[rating]"
                      value="5"
                    />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
                </div>
              </div>
              <div class="column col-md-12">
                <!-- Comment textarea -->
                <div class="form-group">
                  <textarea
                    name="review[body]"
                    id="InputComment"
                    class="form-control"
                    rows="4"
                    placeholder="Your comment here..."
                    required="required"
                  ></textarea>
                </div>
              </div>
            </div>

            <button
              type="submit"
              id="submit"
              value="Submit"
              class="btn btn-default"
            >
              Submit
            </button>
            <!-- Submit Button -->
          </form>
        </div>
        <% } %>
      </div>
      <div class="col-lg-4">
        <!-- sidebar -->
        <div class="sidebar">
          <!-- widget about -->
          <div class="widget rounded">
            <div
              class="widget-about data-bg-image text-center"
              data-bg-image="images/map-bg.png"
            >
              <h4>SF.</h4>
              <p class="mb-4">
                Student live support group insuring fulfilling live is the end
                goal
              </p>
              <ul class="social-icons list-unstyled list-inline mb-0">
                <li class="list-inline-item">
